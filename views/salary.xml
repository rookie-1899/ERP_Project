<!--    form view of the patient model-->
    <record id="salary_form" model="ir.ui.view">
        <field name="name">salesman.salary.form</field>
        <field name="model">salesman.salary</field>
        <field name="arch" type="xml">
            <form string="Đơn Tính Lương NV">
                <sheet>
                     <div class="oe_title">
                        <h1>
                            <field name="salary_record_seq" readonly="1"/>
                        </h1>
                     </div>
                    <group>
                        <group>
                            <field name="record_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Danh Sách Nhân Viên Hoạch Toán Lương">
                            <field name="employee_line">
                                <tree editable="bottom">
                                    <field name="employee_id"/>
                                    <field name="item_id"/>
                                    <field name="employee_dept" readonly="1"/>
                                    <field name="monthly_salary" invisible="0"/>
                                    <field name="basic_salary" readonly="1"/>
                                    <field name="salary_deduction" invisible="0"/>
                                    <field name="salary_bonus" invisible="0"/>
                                    <field name="doc_id" invisible="1"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="item_id"/>
                                    </group>
                                    <group>
                                        <field name="employee_id"/>
                                        <field name="employee_dept"/>
                                        <field name="basic_salary"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Ghi Chú">
                            <group>
                                <field name="notes"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" option="{'post_refresh': 'recipients}"/>
                </div>
            </form>
        </field>
    </record>

    <!--    tree view of the group model-->
    <record id="salesman_employee_salary_search" model="ir.ui.view">
        <field name="name">salesman.salary.search</field>
        <field name="model">salesman.salary</field>
        <field name="arch" type="xml">
            <search string="Tìm Kiếm Danh Sách Tiền Công Nhân Viên">
                <field name="salary_record_seq" filter_domain="['|',('salary_record_seq', 'ilike', self),
                ('record_date', 'ilike', self)]"/>
                <field name="record_date"/>
            </search>
        </field>
        </record>

    <!--action of the patient menu-->
    <record id="action_salary" model="ir.actions.act_window">
        <field name="name">Danh Sách Tiền Công Nhân Viên</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">salesman.salary</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,kanban,form</field>
<!--        <field name="context">{"search_default_female":1}</field>-->
        <field name="help" type="html">
            <p class="0_view_nocontent_smiling_face">
                Danh Sách Tính Lương Nhân Viên
            </p>
        </field>
    </record>

    <menuitem id="inventory_root" name="Quản Lý Kho" sequence="0" web_icon=""/>
    <menuitem id="id_finance" name="Quản Lý Tài Chính" parent="inventory_root" sequence="4"/>
    <menuitem id="salesman_hr_salary" name="Tiền Lương" parent="id_finance" action="action_salary"/>
</odoo>