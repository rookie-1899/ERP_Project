<!--    form view of the patient model-->
    <record id="type_menu_form" model="ir.ui.view">
        <field name="name">salesman.type.form</field>
        <field name="model">salesman.type</field>
        <field name="arch" type="xml">
            <form string="Loại Menu">
                <sheet>
                     <div class="oe_title">
                        <h1>
                            <field name="type_seq" readonly="1"/>
                        </h1>
                     </div>
                    <group>
                        <group>
                            <field name="type_name"/>
                            <field name="menu_group"/>
                            <field name="menu_group_name" invisible="1"/>
                        </group>
                        <group>
                            <field name="notes"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" option="{'post_refresh': 'recipients}"/>
                </div>
            </form>
        </field>
    </record>



    <!--action of the patient menu-->
    <record id="action_type" model="ir.actions.act_window">
        <field name="name">Loại Menu</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">salesman.type</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,kanban,form</field>
<!--        <field name="context">{"search_default_female":1}</field>-->
        <field name="help" type="html">
            <p class="0_view_nocontent_smiling_face">
                Nhập Loại Menu
            </p>
        </field>
    </record>

    <menuitem id="inventory_root" name="Quản Lý Kho" sequence="0" web_icon=""/>
    <menuitem id="id_menu" name="Quản lý bán hàng" parent="inventory_root" sequence="2"/>
    <menuitem id="salesman_type_menu" name="Danh Mục Loại Mặt Hàng" parent="id_menu" action="action_type"/>
